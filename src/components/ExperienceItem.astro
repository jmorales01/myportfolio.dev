---
export interface Props {
	date: string;
	title: string;
	description: string;
    link?: string;
}

const { description, title, date, link } = Astro.props;
---

<div
	class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
	class="mb-1 text-sm font-normal leading-none text-sky-500/80 dark:text-sky-300/80"
	>{date}</time
>
<h3 class="text-lg font-semibold text-yellow-400 dark:text-yellow-200 mt-2">{title}</h3>
<p class="mb-4 text-base font-normal text-gray-700 dark:text-gray-200 text-pretty">
	{description}
</p>
